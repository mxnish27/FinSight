generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  password            String
  name                String?
  role                String               @default("USER") // "USER" or "ADMIN"
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  accounts            Account[]
  transactions        Transaction[]
  familyTransactions  FamilyTransaction[]
  familyNotes         FamilyNote[]
  familyMembers       FamilyMember[]
  budgets             Budget[]
  savingsGoals        SavingsGoal[]
  netWorthSnapshots   NetWorthSnapshot[]
  financialScores     FinancialScore[]
  incomeSources       IncomeSource[]
  debts               Debt[]
  actionPlans         ActionPlan[]
}

model Account {
  id           String        @id @default(cuid())
  userId       String
  name         String
  type         String        // "DEBIT" or "CREDIT"
  balance      Float         @default(0)
  bankName     String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@index([userId])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  accountId   String
  amount      Float
  type        String   // "DEBIT" or "CREDIT"
  category    String
  description String?
  merchant    String?
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  account     Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([accountId])
  @@index([date])
  @@index([category])
}

model FamilyTransaction {
  id         String   @id @default(cuid())
  userId     String
  fromPerson String
  toPerson   String
  amount     Float
  note       String?
  isSettled  Boolean  @default(false)
  date       DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model FamilyNote {
  id          String   @id @default(cuid())
  userId      String
  title       String
  content     String
  type        String   @default("REMINDER") // "REMINDER", "SEND_MONEY", "RECEIVE_MONEY"
  targetPerson String?
  amount      Float?
  isCompleted Boolean  @default(false)
  dueDate     DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model FamilyMember {
  id        String   @id @default(cuid())
  userId    String
  name      String
  relation  String?  // "Parent", "Sibling", "Spouse", "Child", "Other"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ============ FINANCIAL GROWTH PLATFORM MODELS ============

model Budget {
  id        String   @id @default(cuid())
  userId    String
  category  String
  amount    Float
  period    String   @default("MONTHLY") // "MONTHLY", "WEEKLY", "YEARLY"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, category])
  @@index([userId])
}

model SavingsGoal {
  id            String    @id @default(cuid())
  userId        String
  name          String
  targetAmount  Float
  currentAmount Float     @default(0)
  deadline      DateTime?
  priority      String    @default("MEDIUM") // "HIGH", "MEDIUM", "LOW"
  status        String    @default("ACTIVE") // "ACTIVE", "COMPLETED", "PAUSED"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model NetWorthSnapshot {
  id          String   @id @default(cuid())
  userId      String
  totalAssets Float
  totalDebts  Float
  netWorth    Float
  month       Int
  year        Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year])
  @@index([userId])
}

model FinancialScore {
  id                String   @id @default(cuid())
  userId            String
  score             Int
  savingsRateScore  Int
  budgetScore       Int
  debtScore         Int
  expenseTrendScore Int
  month             Int
  year              Int
  diagnosis         String?  // JSON string with detailed diagnosis
  createdAt         DateTime @default(now())
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, month, year])
  @@index([userId])
}

model IncomeSource {
  id        String   @id @default(cuid())
  userId    String
  name      String
  amount    Float
  frequency String   @default("MONTHLY") // "MONTHLY", "WEEKLY", "YEARLY", "ONE_TIME"
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Debt {
  id             String   @id @default(cuid())
  userId         String
  name           String
  totalAmount    Float
  remainingAmount Float
  interestRate   Float    @default(0)
  minimumPayment Float    @default(0)
  dueDate        Int?     // Day of month
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model ActionPlan {
  id          String   @id @default(cuid())
  userId      String
  title       String
  description String
  category    String   // "30_DAY", "60_DAY", "90_DAY"
  priority    Int      @default(1)
  isCompleted Boolean  @default(false)
  targetValue Float?
  currentValue Float?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
